<div class="container">  
  <p id="notice"><%= notice %></p>

  <h1>Apartments</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Numero</th>
        <th>Building</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @apartments.each do |apartment| %>
        <tr>
          <td><%= apartment.numero %></td>
          <td><%= apartment.building.nombre %></td>
          <td><%= link_to 'Show', apartment %></td>
          <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
          <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Apartment', new_apartment_path %>
  <%= link_to "New Building", new_building_path %>
</div>