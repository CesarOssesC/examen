<div class="container">  
  <p id="notice"><%= notice %></p>

  <div class="row d-flex justify-content-between mb-4">
    <div class="col-5">
      <h1><i class="bi bi-building fst-normal fw-bold">Departamentos</i></h1>
    </div>
  </div>

  <div class="tabla-principal table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table table-bordered  mb-0">
      <thead class="sticky-top head-lista">
        <tr>
          <th class="text-center">Numero</th>
          <th class="text-center">Id Edificio</th>
          <th class="text-center">Nombre Edificio</th>
          <th class="text-center" colspan="3">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @apartments.each do |apartment| %>
          <tr>
            <td class="text-center"><%= apartment.numero %></td>
            <td class="text-center"><%= apartment.building_id %></td>
            <td class="text-center"><%= apartment.building.nombre %></td>
            <td class="col-1 text-center"><%= link_to apartment, class: "btn btn-primary m-0", style: "font-size: 11px" do  %>Ver<% end %></td>
            <td class="col-1 text-center"><%= link_to edit_apartment_path(apartment), class: "btn btn-warning m-0", style: "font-size: 11px; color: #fff" do  %>Editar<% end %></td>
            <td class="col-1 text-center"><%= link_to apartment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger m-0", style: "font-size: 11px" do  %>Eliminar<% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <div class="row justify-content-end">
    <div class="col-4">
      <%= link_to "Crear Edificio", new_building_path, class: "btn btn-primary" %>
      <%= link_to "Crear Departamento", new_apartment_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>