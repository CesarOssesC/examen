<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row d-flex justify-content-between mb-4">
    <div class="col-3">
      <h1><i class="bi bi-building fst-normal fw-bold">Edificios</i></h1>
    </div>
  </div>

  <div class="tabla-principal table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table table-bordered">
      <thead class="sticky-top head-lista">
        <tr>
          <th class="text-center col-1">Id Edificio</th>
          <th class="text-center">Nombre</th>
          <th class="text-center">Direccion</th>
          <th class="text-center">Ciudad</th>
          <th class="text-center" colspan="3">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @buildings.each do |building| %>
          <tr>
            <td class="text-center col-1"><%= building.id %></td>
            <td class="text-center"><%= building.nombre %></td>
            <td class="text-center"><%= building.direccion %></td>
            <td class="text-center"><%= building.ciudad %></td>
            <td class="text-center col-1"><%= link_to building, class: "btn btn-primary m-0", style: "font-size: 11px" do%>Ver<% end %></td>
              
            <td class="text-center col-1"><%= link_to edit_building_path(building), class: "btn btn-warning m-0", style: "font-size: 11px; color: #fff" do%>Editar<% end %></td>
            <td class="text-center col-1"><%= link_to building, method: :delete, data: { confirm: 'Realmente quieres eliminar este edificio?' }, class: "btn btn-danger m-0", style: "font-size: 11px" do%>Eliminar<% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>
  <div class="row justify-content-end">
    <div class="col-4">
      <%= link_to 'Crear Edificio', new_building_path, class: "btn btn-primary" %>
      <%= link_to "Crear Departamento", new_apartment_path, class: "btn btn-primary" %>
    </div>
  </div>
  
</div>