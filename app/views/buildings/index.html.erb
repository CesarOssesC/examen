<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row d-flex justify-content-between mb-4">
    <div class="col-3">
      <h1><i class="bi bi-building fst-normal fw-bold">Edificios</i></h1>
    </div>
    <div class="col-4 me-0">
      <%= link_to 'Crear Edificio', new_building_path, class: "btn btn-primary" %>
      <%= link_to "Crear Departamento", new_apartment_path, class: "btn btn-primary" %>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Direccion</th>
        <th>Ciudad</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @buildings.each do |building| %>
        <tr>
          <td><%= building.nombre %></td>
          <td><%= building.direccion %></td>
          <td><%= building.ciudad %></td>
          <td><%= link_to building, class: "btn btn-primary", style: "font-size: 11px" do%><i class="bi bi-card-list">Ver</i><% end %></td>
            
          <td><%= link_to edit_building_path(building), class: "btn btn-warning", style: "font-size: 11px; color: #fff" do%><i class="bi bi-pencil-fill">Editar</i><% end %></td>
          <td><%= link_to building, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: "font-size: 11px" do%><i class="bi bi-trash-fill">Eliminar</i><% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="row justify-content-end">
    <div class="col-4">
      <%= link_to 'Crear Edificio', new_building_path, class: "btn btn-primary" %>
      <%= link_to "Crear Departamento", new_apartment_path, class: "btn btn-primary" %>
    </div>
  </div>
  
</div>