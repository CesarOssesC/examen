        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" href="/">Inicio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/buildings">Edificios</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/apartments">Departamentos</a>
          </li>
          
        </ul>
      </div>
    </div>
  </nav>
